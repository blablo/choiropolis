<h1>Listing chords</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Song</th>
    <th>Lyric</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @chords.each do |chord| %>
  <tr>
    <td><%= chord.id %></td>
    <td><%= chord.song_id %></td>
    <td><%= chord.lyric %></td>
    <td><%= link_to 'Show', chord %></td>
    <td><%= link_to 'Edit', edit_chord_path(chord) %></td>
    <td><%= link_to 'Destroy', chord, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

